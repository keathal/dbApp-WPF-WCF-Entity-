<Window x:Class="EntityDB.Chat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EntityDB"
        mc:Ignorable="d"
        Title="Chat" Height="300" Width="300">
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="75"></RowDefinition>
        </Grid.RowDefinitions>
        <Button Name="btn_send" Background="Lavender" Content="Отправить" HorizontalAlignment="Right" Margin="0,0,15,15" Grid.Row="1" VerticalAlignment="Bottom" Width="75" Height="30" Click="btn_send_Click"/>
        <TextBox Name="t_msg" Foreground="AliceBlue" Background="Black" Opacity="0.7" BorderBrush="AliceBlue" Height="30" Margin="15,15,100,15" Grid.Row="1" Text="TextBox" VerticalAlignment="Bottom" KeyDown="t_msg_KeyDown"/>
        <ListBox Name="lbChat" Margin="15" Foreground="AliceBlue" Background="Black" Opacity="0.7" BorderBrush="AliceBlue"/>
    </Grid>
</Window>
